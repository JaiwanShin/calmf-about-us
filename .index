  <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>

  <script>
    gsap.registerPlugin(ScrollTrigger);

    // 1. Fade Up ì• ë‹ˆë©”ì´ì…˜
    gsap.utils.toArray('.fade-up').forEach((el) => {
      gsap.to(el, {
        opacity: 1,
        y: 0,
        duration: 1.2,
        ease: 'power3.out',
        scrollTrigger: {
          trigger: el,
          start: 'top 85%',
          toggleActions: 'play none none none'
        }
      });
    });

    // Fade Left ì• ë‹ˆë©”ì´ì…˜
    gsap.utils.toArray('.fade-left').forEach((el) => {
      gsap.to(el, {
        opacity: 1,
        x: 0,
        duration: 1.2,
        ease: 'power3.out',
        scrollTrigger: {
          trigger: el,
          start: 'top 85%',
          toggleActions: 'play none none none'
        }
      });
    });

    // Fade Right ì• ë‹ˆë©”ì´ì…˜
    gsap.utils.toArray('.fade-right').forEach((el, i) => {
      gsap.to(el, {
        opacity: 1,
        x: 0,
        duration: 1,
        ease: 'power3.out',
        delay: i * 0.1,
        scrollTrigger: {
          trigger: el,
          start: 'top 85%',
          toggleActions: 'play none none none'
        }
      });
    });

    // 2. íŒ¨ëŸ´ë™ìŠ¤ íš¨ê³¼
    gsap.utils.toArray('[data-parallax]').forEach(el => {
      const speed = parseFloat(el.dataset.speed) || 0.2;
      gsap.to(el, {
        y: () => window.innerHeight * speed,
        ease: 'none',
        scrollTrigger: {
          trigger: el.closest('section') || el,
          start: 'top bottom',
          end: 'bottom top',
          scrub: 1.5
        }
      });
    });

    // 3. Philosophy í•€ ìŠ¤í¬ë¡¤
    const slides = gsap.utils.toArray('.philosophy-slide');
    const dots = gsap.utils.toArray('.progress-dot');

    slides[0].classList.add('active');
    dots[0].classList.add('active');

    const philosophyTl = gsap.timeline({
      scrollTrigger: {
        trigger: '.philosophy',
        pin: true,
        start: 'top top',
        end: '+=300%',
        scrub: 1,
        onUpdate: (self) => {
          const progress = self.progress;
          let activeIndex = Math.floor(progress * 3);
          if (activeIndex > 2) activeIndex = 2;

          slides.forEach((slide, i) => {
            slide.classList.toggle('active', i === activeIndex);
          });
          dots.forEach((dot, i) => {
            dot.classList.toggle('active', i === activeIndex);
          });
        }
      }
    });

    slides.forEach((slide, i) => {
      if (i === 0) {
        gsap.set(slide, { opacity: 1, y: 0 });
      } else {
        gsap.set(slide, { opacity: 0, y: 50 });
      }
    });

    philosophyTl
      .to(slides[0], { opacity: 0, y: -50, duration: 0.5 }, 0.2)
      .to(slides[1], { opacity: 1, y: 0, duration: 0.5 }, 0.3)
      .to(slides[1], { opacity: 0, y: -50, duration: 0.5 }, 0.55)
      .to(slides[2], { opacity: 1, y: 0, duration: 0.5 }, 0.65);

    // 4. Awards íƒ€ì„ë¼ì¸ ì  ì• ë‹ˆë©”ì´ì…˜
    gsap.utils.toArray('.award-dot').forEach((dot, i) => {
      gsap.from(dot, {
        scale: 0,
        duration: 0.5,
        ease: 'back.out(2)',
        scrollTrigger: {
          trigger: dot,
          start: 'top 70%',
          toggleActions: 'play none none none'
        },
        delay: i * 0.2
      });
    });

    // 6. CTA ì›í˜• ë°°ê²½ ì• ë‹ˆë©”ì´ì…˜
    gsap.to('.cta-circle', {
      rotation: 360,
      duration: 60,
      ease: 'none',
      repeat: -1
    });

    gsap.to('.cta-glow', {
      scale: 1.2,
      opacity: 0.15,
      duration: 3,
      ease: 'power1.inOut',
      yoyo: true,
      repeat: -1
    });

    // 7. ë„¤ë¹„ê²Œì´ì…˜ ìŠ¤í¬ë¡¤ íš¨ê³¼
    ScrollTrigger.create({
      start: 'top -100',
      onUpdate: (self) => {
        const nav = document.querySelector('nav');
        if (self.direction === 1) {
          nav.style.transform = 'translateY(-100%)';
        } else {
          nav.style.transform = 'translateY(0)';
        }
      }
    });

    // 8. ìŠ¤í¬ë¡¤ ì¸ë””ì¼€ì´í„° ìˆ¨ê¸°ê¸°
    gsap.to('.scroll-indicator', {
      opacity: 0,
      scrollTrigger: {
        trigger: '.hero',
        start: 'top top',
        end: '+=200',
        scrub: 1
      }
    });
  </script>

